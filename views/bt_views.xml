<odoo>
    <record id="view_gmao_bt_kanban" model="ir.ui.view">
        <field name="name">gmao.bt.kanban</field>
        <field name="model">gmao.bt</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id">
                <field name="stage_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <strong><field name="name"/></strong>
                            </div>
                            <div>
                                <field name="equipment_id"/>
                            </div>
                            <div>
                                <field name="intervention_type"/>
                            </div>
                            <div class="o_kanban_footer">
                                <field name="technician_id" widget="many2one_avatar_user"/>
                                <field name="priority" widget="priority"/>
                                <field name="activity_ids" widget="kanban_activity"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_gmao_bt_list" model="ir.ui.view">
        <field name="name">gmao.bt.list</field>
        <field name="model">gmao.bt</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="equipment_id"/>
                <field name="intervention_type"/>
                <field name="stage_id"/>
            </list>
        </field>
    </record>

    <record id="view_gmao_bt_form" model="ir.ui.view">
        <field name="name">gmao.bt.form</field>
        <field name="model">gmao.bt</field>
        <field name="arch" type="xml">
            <form string="Bon de Travail">
                <header>
                    <button name="action_print_bt"
                            string="Télécharger"
                            type="object"
                            class="btn-primary"/>
                    <field name="stage_id" widget="statusbar" options="{'clickable': 1}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="Référence BT"/></h1>
                    </div>

                    <group>
                        <group>
                            <field name="equipment_id"/>
                            <field name="intervention_type"/>
                            <field name="technician_id"/>
                            <field name="supervisor_id"/>
                            <field name="priority" widget="priority"/>
                        </group>

                        <group>
                            <field name="description" placeholder="Détail du problème ou intervention..."/>
                            <field name="used_parts_ids" widget="many2many_tags"/>
                            <field name="schedule_date"/>
                            <field name="technician_signature" widget="signature"/>
                            <field name="supervisor_signature" widget="signature"/>
                        </group>
                    </group>

                    <notebook>
                    
                        <page string="Description">
                            <field name="description" placeholder="Détail du problème ou intervention..."/>
                        </page>

                        <page string="Contrat de Maintenance">
                            <group>
                                <field name="contract_id" readonly="1"/>
                                <field name="contract_start_date"/>
                                <field name="contract_end_date"/>
                                <field name="sla_duration"/>
                                <field name="contract_cost"/>
                                <field name="contract_client_id"/>
                                <field name="contract_supplier_id"/>
                            </group>
                        </page>

                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_report_gmao_bt" model="ir.actions.report">
        <field name="name">Bon de Travail</field>
        <field name="model">gmao.bt</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">gmao.report_gmao_bt_document</field>
        <field name="report_file">gmao.report_gmao_bt_document</field>
        <field name="print_report_name">'BT - %s' % (object.name)</field>
    </record>

    <record id="view_gmao_bt_search" model="ir.ui.view">
        <field name="name">gmao.bt.search</field>
        <field name="model">gmao.bt</field>
        <field name="arch" type="xml">
            <search>
                <field name="stage_id"/>
                <field name="schedule_date"/>
                <filter name="submitted" string="Soumis" domain="[('stage_id.name','=','Soumis')]"/>
                <filter name="assigned" string="Affecté" domain="[('stage_id.name','=','Affecté')]"/>
                <filter name="realised" string="Réalisé" domain="[('stage_id.name','=','Réalisé')]"/>
                <filter name="closed" string="Clôturé" domain="[('stage_id.name','=','Clôturé')]"/>
                <filter name="planned" string="Planifiés" domain="[('schedule_date','>',context_today())]"/>
            </search>
        </field>
    </record>


</odoo>
